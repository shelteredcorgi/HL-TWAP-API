# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/hl_twap
# For local development with SQLite:
# DATABASE_URL=sqlite:///./hl_twap.db

# S3 Configuration
# Trade data bucket (contains node_fills_by_block for TWAP trades)
S3_BUCKET_NAME=hl-mainnet-node-data
S3_REGION=us-east-1
S3_PREFIX=node_fills_by_block/
# Request payer is required for Hyperliquid S3 access
S3_REQUEST_PAYER=requester

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_KEY=your-api-key-here

# Scheduler Configuration
SCHEDULER_ENABLED=true
SCHEDULER_HOUR=2
SCHEDULER_MINUTE=0

# Logging
LOG_LEVEL=INFO
